# 1. Base image
FROM node:18-alpine

# 2. Set working directory
WORKDIR /app

# 3. Copy package files trước (tối ưu cache)
COPY package*.json ./

# 4. Install dependencies
RUN npm install --production

# 5. Copy toàn bộ source code
COPY . .

# 6. Expose port (Render sẽ tự inject PORT)
EXPOSE 3000

# 7. Start server
CMD ["node", "server.js"]
